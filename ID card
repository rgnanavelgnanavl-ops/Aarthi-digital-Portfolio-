        /* ------------------------------------------- */
        .card {
            background-color: white;
            border-radius: 2rem;
            max-width: 24rem;
            width: 90%;
            height: 38rem;
            padding: 0; 
            cursor: pointer;
            
            /* **3D Flip setup** */
            perspective: 1000px; 
            
            /* **Animations** */
            animation: 
                cardFloat 4s ease-in-out infinite, 
                cardGlow 2s ease-in-out infinite alternate; 
        }
        
        /* Optional: Add a slight press-down effect on hover/click */
        .card:hover {
            transform: scale(0.98); 
        }

        /* ------------------------------------------- */
        /* CSS for 3D Flip Transition */
        /* ------------------------------------------- */
        #card-inner {
            /* This is the element that flips */
            transform-style: preserve-3d;
            transition: transform 0.7s; 
        }

        /* Class added by JavaScript to trigger the flip */
        .is-flipped {
            transform: rotateY(180deg);
        }

        .card-face {
            /* Hiding the reverse side of the face during flip */
            backface-visibility: hidden; 
            background-color: white;
            border-radius: 2rem; 
            position: absolute;
            inset: 0;
            /* Relative position needed for absolute logo positioning */
            position: relative; 
            overflow: hidden;
        }
        
        /* Initial state of the back face (rotated 180deg so it's hidden) */
        .card-back {
            transform: rotateY(180deg);
        }
        
        /* ------------------------------------------- */
        /* NEW: Back Page Logo Watermark Style - Position adjusted to the bottom blank space */
        /* ------------------------------------------- */
        .back-logo-watermark {
            position: absolute;
            /* Positioned lower (70%) to fall into the blank space below contact details */
            top: 70%; 
            left: 50%;
            transform: translate(-50%, -50%); 
            width: 70%; 
            height: auto;
            opacity: 0.08; 
            pointer-events: none; 
            z-index: 0; 
        }
        
        /* ------------------------------------------- */
        /* Keyframes for Floating & Glowing */
        /* ------------------------------------------- */
        @keyframes cardFloat {
            0% { transform: translateY(0); }
            50% { transform: translateY(-10px); } 
            100% { transform: translateY(0); }
        }
        
        @keyframes cardGlow {
            0% {
                box-shadow: 
                    0 20px 25px -5px rgba(0, 0, 0, 0.1), 
                    0 0 10px rgba(147, 51, 234, 0.4); 
            }
            100% {
                box-shadow: 
                    0 20px 30px -5px rgba(0, 0, 0, 0.2), 
                    0 0 25px rgba(147, 51, 234, 0.9); 
            }
        }

        /* Other common styles */
        .gradient-line {
